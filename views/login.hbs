<div class="container u-mt-5">
        <div class="row">
            <div class="col s6 offset-s3">
                <h1 class="heading1 green-text">LOGIN</h1>
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <form id="login" class="col s10 offset-s1">
                                <div class="input-field">
                                    <input type="text" class="validate" name="username" id="login_username">
                                    <label for="username" class="green-text" style="font-weight: 600;">Username</label>
                                </div>
                                <div class="input-field">
                                    <input type="password" class="validate" name="password" id="login_password">
                                    <label for="password" class="green-text" style="font-weight: 600;">Password</label>
                                </div>
                                <div class="row">
                                    <div class="col s6 offset-s3 center-align">
                                        <button type="submit" class="btn waves-effect waves-light white green-text" style="font-weight: 700;">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
    
    